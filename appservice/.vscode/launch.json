{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/test/extension",
                "--extensionTestsPath=${workspaceFolder}/lib/test"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/lib/test/**/*.js"
            ],
            "preLaunchTask": "npm: compile",
            "env": {
                "MOCHA_grep": "", // RegExp of tests to run (empty for all)
                "MOCHA_enableTimeouts": "0", // Disable time-outs,
                "DEBUGTELEMETRY": "1",
                "NODE_DEBUG": ""
            }
        }
    ]
}
